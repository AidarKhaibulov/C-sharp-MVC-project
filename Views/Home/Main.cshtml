@model IEnumerable<WebMVC.Models.ProductViewModel>
<!DOCTYPE html>

<html>
<head>
    <title>Главная</title>
</head>
<body>
<div>
     <td><a asp-action="Favorite" asp-controller="Home">Избранное</a></td>
    <h3>MAIN</h3>
    <table class="table">
    <tr><th>Название товара</th><th>Цена товара</th></tr>
    <!--<div class="container-img">-->
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="AddToFavorite" asp-controller="Home" asp-route-id="@item.Id">Добавить в избранное</a>
                </td>
                <td>
                     <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                            <input type="submit" value="Удалить" />
                     </form>
                </td>
                
           <!-- 
                <div class="item-grow">
                    <div class="item">
                   
                        @item.Name
                    </div>
                </div>
                -->
         </tr>
        }
    </table>
    </div>
<!--</div>-->
</body>
</html>